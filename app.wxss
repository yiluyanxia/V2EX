/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.lightgray {
  color: #aab0c6;
}

.darkgray {
  color: #334;
  box-shadow: 0px 2px 3px rgba(0, 0, 0, 0.1);
}
.sep20{
  margin-bottom: 20px;
}
.wrapper {
  background-color: #e2e2e2;
  height: 100%;
  padding: 8px;
}

.itembox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center ;
  background-color: #fff;
  padding: 8px;
  margin-bottom: 2px;
}

