.mainbox .menber image{
 width: 32px;
 height: 32px;
 border-radius: 4px;
}
.mainbox .menber{
  display: flex;
  align-items: center;
}
.mainbox .menber .username{
  font-size: 14px;
  color: #778087;
  margin: 0 10px;
}
.mainbox .item-title{
  margin-left: 42px;
  font-size: 17pt;
  color: #778087;
}
.mainbox .reply{
  margin-left: 42px;
  padding-top: 8px;
  font-size: 14pt;
  color: #ccc;
}
.mainbox .reply .replyname{
  color: #778087;
}

.replynum{
  padding: 1px 5px;
  font-size: 12pt;
  border-radius: 12px;
  text-align: center;
  background-color: #aab0c6;
  color: #fff;
}